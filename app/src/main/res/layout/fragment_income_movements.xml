<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:fitsSystemWindows="true"
    tools:context=".movements.IncomeMovementsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listIncomeMovements"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/blankIncomeMovementsIcon"
            android:layout_marginBottom="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/ic_reminder_icon_blank_foreground"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="invisible"
            />
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blankIncomeMovementsIcon"
            android:id="@+id/tvSinRegistros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Â¡No lo olvides mas!\nAgenda tus facturas o transacciones"
            android:textSize="15sp"
            android:textAlignment="center"
            android:visibility="invisible" />

        <Button
            android:id="@+id/buttonNewIncomeMovements"
            app:layout_constraintStart_toStartOf="@id/guidelinevertical"
            app:layout_constraintTop_toTopOf="@id/guideline"
            android:layout_width="58dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/colorPastelOrange"
            android:focusable="true"
            android:clickable="true"
            android:text="+"
            android:textAlignment="center"
            android:textSize="35dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:elevation="10dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.84" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelinevertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.74" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>